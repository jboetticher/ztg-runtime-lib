{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "test/**/*",
    "utils.ts",
    "generateSpec.ts"
  ],
  "paths": {
    "*": [
      "node_modules/*",
      "src/types/*"
    ]
  }
}